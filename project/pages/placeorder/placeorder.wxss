/* pages/placeorder/placeorder.wxss */
@import "../../style/weui.wxss";
page{
  padding-bottom:80px;
}
.weui-cells:before,.weui-cell:before{
  border-top:none;
}

.zan-card__detail-row{
  margin-bottom:8px;
  margin-top:8px; 
}
#addr-info{
  margin-top:5px;
}
#addr-info .weui-cell{
  padding:5px 15px 10px;
}
/* #addr-info .weui-panel__hd:after{
  border-bottom:none;
} */
.weui-panel__hd{
  padding:14px 15px 5px;
}
.add-addr{
  display:inline-block;
  width:72rpx;
  height:72rpx;
  text-align:center;
  line-height:60rpx;
  background:#e01306;
  color:#fff;
  font-size:70rpx;
  border-radius:8px;
  margin:0 10px 0 0;
}
.addr-icon{
  width:50rpx;
  height:50rpx;
  margin-right:8px;
}
.order-info-box .weui-cell__bd{
  font-size: 28rpx;
  color:#666;
}
.ribbon{
  width:100%;
  height:5px;
}
.weui-cells_after-title{
  margin: 5px 0 0;
}
.order-info-box .zan-card{
  background: #fafafa;
}
.info{
  padding:0 0 5px;
}
.zan-panel{
  border-top:none;
  border-bottom:none;
}
.other-info{
  margin-top:0;
}
.other-info .total{
  color:#e01306;
}
.other-info .advise{
  flex-grow:0.7;
}
.other-info .advise>input{
  text-align: center;
}


/* 提交订单底部按钮 */
.order-sure{
  display: flex;
  position: fixed;
  bottom:0;
  width: 100%;
  height: 40px;
}
.order-sure>view{
  line-height:40px;
  font-size:30rpx;
}
.order-sure .total{
  padding:0 10px;
  flex-grow:0.8;
  text-align:center;
  background: #fff;
  color:#e01306;
}
.order-sure>view:last-child{
  background:#e01306;
  color:#fff;
  flex-grow:0.5;
  text-align: center;
}