/* pages/addr/addr.wxss */
@import "../cart/cart.wxss";
.weui-cell_access{
  padding:2px 15px;
}
.weui-cell__bd{
  font-size:30rpx;
}
.add-addr{
  width:60rpx;
  height:60rpx;
  margin:5px 5px 0 0;
}
.line{
  width: 100%;
  height:5px;
  margin-top:8px;
  display:block;
}

.zan-btn.zan-btn--large{
  position: fixed;
  width: 100%;
  bottom:0;
}
.zan-btn--large{
  height: 80rpx;
  line-height:80rpx;
}

/* 有地址时列表样式 */
.label{
  display:block;
  margin-bottom:6px;
}
.weui-panel__bd{
  background: #fff;
  padding: 5px 0;
  border-bottom: 1px solid #e5e5e5;
}
.weui-media-box{
  display:inline-block; 
  padding:10px 15px;
  width:100%;
  box-sizing: border-box;
}
.weui-media-box:before{
  border:none;
}
.weui-media-box__title{
  font-size: 14px;
}
.weui-media-box__title_in-text{
  margin-bottom: 8px;
}
.info,.edit{
  display: flex;
  justify-content: space-between;
}
.weui-media-box__desc{
  font-size: 12px;
  -webkit-line-clamp:1;
}
radio .wx-radio-input{
   margin:0 0 20px 15px; 
}
.edit{
  padding:5px 15px 6px;
  text-align: right;
  background: #fff;
}
.edit>view:first-child{
  font-size:28rpx;
  color:#666;
  height: 25px;
  line-height: 25px;
}
.edit radio{
  height:25px;
  position:relative;
  top:3px;
  left:0;
  margin:0 5px 0 0;
}
.edit text{
  position:relative;
  top:2px;
}
.zan-btn--mini{
  height:25px;
  line-height:24px;
}
.edit button>image{
  width:16px;
  height:16px;
  position:relative;
  top:3px;
}




.weui-check__label{
  padding:0;
}
.box{
  background: #fff;
}
.pick{
  width:32px;
  height: 32px;
  position: relative;
  top:-30px;
}
.price{
  color:#e01306;
}
.zan-card{
  display:inline-block;
  width:95%;
  padding:0 5px;
}
.zan-card__left-col{
  font-size:12px;
}

.off{
  background: #e5e5e5;
  color:#000;
}
