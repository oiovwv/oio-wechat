@import "../../style/weui.wxss";
page{
  padding-bottom: 50px;
}
.weui-panel{
  margin-top:6px;
}
/* 没有商品时购物车列表样式 */
.zan-panel{
  margin-top:5px;
}
.zan-card{
  padding:8px 15px;
  background:#fafafa;
  margin-bottom:5px;
}
.zan-card:last-child{
  margin-bottom: 0;
}
.cart-box{
  text-align: center;
  position: absolute;
  top:80px;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  font-size: 14px;
}
.cart-box>image{
  width:150px;
  height: 150px;
}
.cart-box>view{
  margin:15px 0 0 0;
}
.weui-btn{
  margin: 70px 0 0 0
}
button[size=mini]{
  padding:0.3em 1.34em;
}

/* 有商品时的样式 */
.weui-navbar{
  background:#fff;
}
.weui-navbar__item{
  color:#333;
  border-bottom:6rpx solid transparent;
}
.weui-navbar__item.weui-bar__item_on{
  color:#e01306;
  border-color:#e01306;
  transition: all 0.6s ease-in-out 0s;
}
/* .weui-navbar__slider{
  width:5em;
  background:#e01306;
} */
.weui-tab__content{
  margin-top:5px;
}
.weui-panel__hd{
  padding:0;
}
.weui-panel__ft{
  border-top:1rpx solid #d9d9d9;
}
.weui-cell_access{
  font-size: 14px;
  color:#666;
}


/* 当某个选项卡内容为空时 */
.order-box{
  background: #fff;
  text-align: center;
  padding:50px 15px;
}
.order-box>image{
  width:253px;
  height: 134px;
  margin:15px 0;
}
.order-box>view{
  font-size: 28rpx;
  color:#666;
}