/* pages/orderDetail/orderDetail.wxss */
@import "../placeorder/placeorder.wxss";
#status{
  background: #FF6138;  
}
#status .weui-cell{
  padding:20px 15px;
}
.weui-cell__bd{
  line-height: 1.5;
}
#status .weui-cell__bd{
  color:#fff;
  font-size:30rpx;
}
#status .weui-cell__bd view:last-child,#addr-info .weui-cell__bd view:last-child{ 
  font-size: 24rpx;
}
.info,.other{
  margin:6px 0;
}
.other{
  margin-bottom: 15px;
}
.info .weui-panel__hd{
  padding: 10px 15px 5px;
}
.info .weui-panel__hd text{
  position: relative;
  top:-3px;
}
.icon{
  width:48rpx;
  height:48rpx;
  margin:5px 10px 0 0;
}
.mall-icon{
  width:30rpx;
  height:30rpx;
  margin-right:10px; 
}
.order-icon{
  width: 80rpx;
  height: 80rpx;
}
.ribbon{
  display: block;
}
 
.other{
  background:#fff;
  padding:10px 15px;
  font-size: 30rpx;
  line-height:2;
  color:#333;
} 
.other>view{
  display:flex;
}
.other>view>view:first-child{
  width: 23%;
}
.other>view>view:last-child{
  width: 77%;
}
.operate{
  padding:0 10rpx;
}
.operate .weui-flex__item{
  margin: 0 15rpx;
}
.operate .weui-flex__item button{
  font-size:30rpx;
  color: #fff;
}
.operate .weui-flex__item:first-child button{
  background: #11CBD7;
}
.operate .weui-flex__item:last-child button{
  background: #FA4659;
}